<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_inherit_group_product_product_form">
    <field name="name">product.product.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="type">form</field>
    <field name="arch" type="xml">
         <xpath expr="//field[@name='alternative_products']" position="after">
             <field name='group_product_ids' string="Group Products"
                                colspan="4" widget="one2many_list">
                                <tree editable='bottom'>
                                    <field name='grp_id' string='Groups'/>
                                    <field name='sub_grp_id' string='Sub Group'/>
                                    <field name='sub_sub_grp_id' string='Sub Sub Group'/>

                                </tree>
             </field>
         </xpath>
    </field>
        </record>






    </data>
</odoo>